<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_registrado_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:id="@+id/item_registrado_txtDni"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="--------"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_registrado_txtNombres"
            android:layout_weight="3.5"
            android:layout_width="0dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="---------"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_registrado_txtAula"
            android:text="-"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textColor="#3e2723"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_registrado_txtFecha"
            android:text="----------"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:textColor="#b71c1c"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_registrado_txtHentrada"
            android:text="--:--"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textColor="#b71c1c"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_registrado_txtHaula"
            android:text="--:--"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textColor="#b71c1c"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_registrado_txtHraula"
            android:text="--:--"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textColor="#b71c1c"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_registrado_txtHsalida"
            android:text="--:--"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textColor="#b71c1c"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>